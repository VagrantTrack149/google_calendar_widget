{
  "name": "widget-g-calendar",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para mostrar el calendario de Google Calendar, realizada en 2 horas como capricho xd",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "server": "nodemon server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --windows",
    "watch": "npx tailwindcss -i ./input.css -o public/style/styles.css --watch",
    "build": "npx tailwindcss -i ./input.css -o public/style/styles.css"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "fs": "^0.0.1-security",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "VagranTrack149.widgetgcalendar",
    "productName": "CalendarWidget",
    "files": [
      "**/*"
    ],
    "win": {
      "target": ["nsis","portable"],
      "icon": "public/img/jupiter.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CalendarWidget",
      "installerIcon": "public/img/jupiter.ico"
    }
  }
}
